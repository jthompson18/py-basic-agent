# --- Required ---
SERPER_API_KEY=your_serper_key

# Default: HOST OLLAMA (run `ollama serve` separately)
OLLAMA_BASE_URL=http://host.docker.internal:11434
MODEL=llama3.1:8b
EMBED_MODEL=nomic-embed-text

# Agent limits
MAX_STEPS=8
TEMPERATURE=0.2

# Memory backend: default to pgvector
MEMORY_BACKEND=pgvector

# pgvector connection (matches compose defaults)
PGHOST=pgvector
PGPORT=5432
PGUSER=agent
PGPASSWORD=agent
PGDATABASE=agentdb

PYTHONPATH=/app
AGENT_DB_URL=postgresql://agent:agentpass@pgvector:5432/agentdb
OLLAMA_HOST=http://host.docker.internal:11434
AGENT_EMBED_MODEL=nomic-embed-text   # 768-d
AGENT_EMBED_DIM="768"
AGENT_LLM_TIMEOUT_READ=180
AGENT_LLM_KEEP_ALIVE=1h